entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[agent]
expertMode = true

[workflows]
runButton = "Upload Video"

[[workflows.workflow]]
name = "Upload Video"
author = 45394457
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --noauth_local_webserver --file=\"your_video_file.mp4\" --title=\"My Video\" --description=\"Uploaded from Replit\" --category=\"22\" --privacyStatus=\"private\""
